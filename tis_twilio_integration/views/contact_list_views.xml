<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <menuitem id="twilio_sms_contacts_menu" name="Contacts" parent="main_twilio_sms_menu" sequence="4"/>


    <record model="ir.ui.view" id="twilio_sms_contact_list_tree_view">
        <field name="name">sms.contact.list.tree</field>
        <field name="model">sms.contact.list</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>


    <!--Form-->
    <record id="twilio_sms_contact_list_form" model="ir.ui.view">
        <field name="name">sms.contact.list.form</field>
        <field name="model">sms.contact.list</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="members_ids">
                            <tree>
                                <field name="name"/>
                                <field name="mobile"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="twilio_contact_list_action_form" model="ir.actions.act_window">
        <field name="name">SMS Contact Lists</field>
        <field name="res_model">sms.contact.list</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_twilio_sms_contact_list" name="Contact Lists" parent="twilio_sms_contacts_menu"
              sequence="20" action="twilio_contact_list_action_form"/>

</odoo>
