<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="twilio_message_wizard_form" model="ir.ui.view">
        <field name="name">message.wizard.form</field>
        <field name="model">message.wizard</field>
        <field name="arch" type="xml">
            <form>
                <field name="s_flag" invisible="1"/>
                <field name="b_flag" invisible="1"/>
                <field name="success_message" attrs="{'invisible':[('s_flag','=', False)]}" style="border-color:white"/>
                <field name="bounce_message" attrs="{'invisible':[('b_flag','=', False)]}" style="border-color:white"/>
                <footer>
                    <button name="action_ok" string="Ok" type="object" default_focus="1" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>